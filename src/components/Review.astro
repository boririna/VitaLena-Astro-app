---
export interface Props {
  name: string;
  date: string;
  text: string;
}

const { name, date, text } = Astro.props;
---

<div class="slide-mobile" id="slide1">
  <div class="slide-text">
    <div>
      <p>
        {text}
      </p>
      <p>- {name}, {date}</p>
    </div>
  </div>
</div>

<style>
  .slide-mobile {
    width: 100%;
    height: 100%;
    max-width: 1020px;
    position: absolute;
    transition: all 0.5s;
    display: flex;
    gap: 16px;
    padding-right: 1px;
  }

  .slide-text {
    width: 100%;
    display: flex;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.674);
    padding: 20px;
    border-radius: 4px;
  }

  .slide-text :first-child,
  .slide-text-vertical-center :first-child {
    padding-bottom: 10px;
  }
</style>
