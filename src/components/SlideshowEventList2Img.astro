---
import { Icon } from "astro-icon";
export interface Props {
    slideImg1: string;
    slideImg2: string;
    slideImg3: string;
    slideImg4: string;
}

const { slideImg1, slideImg2, slideImg3, slideImg4 } = Astro.props;
---

<!-- Slider container -->

<div class="slider-tablet">
    <!-- slide 1 -->
    <div class="slide-tablet">
