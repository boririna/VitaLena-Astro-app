---
// import { Icon } from 'astro-icon';
import ButtonGrey from './ButtonGrey.astro';
export interface Props {
	title1: string;
	body1: Array<string>;
	body2: Array<string>;
	href1: string;
	imgPath1: string;
}

const { imgPath1, href1, title1, body1, body2 } = Astro.props;
---
<div class="card">
	<div class="card-img-text">
		<img src={imgPath1} class="card-img" alt="Klassische Massage">
		<div class="card-text">
			<h2>{title1}</h2>
			{body1.map((paragraph) => (
				<p>{paragraph}</p>
			))}
			<!-- <p class="card-link"><a href={href1}>weiterlesen</a></p> -->
			<div class="card-text-rest">
				<details>
					<summary>
						<p class="card-link">weiterlesen/schlissen</p>
					  <!-- <span class="icon">ðŸ‘‡</span> -->
					</summary>
					{body2.map((par) => (
						<p>{par}</p>
					))}
				</details>
				
				<div class="card-button">
					<ButtonGrey href="#contacts" text="MASSAGE BUCHEN" />
				</div>
			</div>
		</div>
		
	</div>
	
