---
export interface Props {
	text: string;
}

const { text } = Astro.props;
---

<button type="submit" class="button-grey">{text}</button>

<style>
    .button-grey {
        min-width: 180px;
        text-align: center;
        padding: 12px 20px;
        border-radius: 4px;
        border: none;
        background-color: #8E9AAF;
        color: #FEEAFA;
        text-decoration: none;
        display: inline-block;
        font-family: 'Philosopher', sans-serif;
        font-size: 15px;
        cursor: pointer;
        box-sizing: border-box;
    }

    .button-grey:hover {
        background-color: #DEE2FF;
        color: #8E9AAF;
        font-weight: 500;
    }

    @media (max-width: 600px) {
        .button-grey {
            width: 160px;
            font-size: 16px;
            padding: 10px 0;
            /* display: block; */
            margin-left: auto;
            margin-bottom: 8px;
        }
    }

</style>