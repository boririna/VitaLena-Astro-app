---
import Layout from "../layouts/Layout.astro";
import Banner from "../components/Banner.astro";
import Footer from "../components/Footer.astro";
import ButtonGrey from '../components/ButtonGreySubmit.astro';
import { Icon } from "astro-icon";
import ButtonGreySubmit from "../components/ButtonGreySubmit.astro";
---

<Layout title="VitaLena">
    <main>
        <Banner />
        <div class="contacts">
            <div class="page-title">
                <h1>Kontakte</h1>
            </div>
            <div class="address-map">
                <div class="addr-item1">
                    <div class="icon-text">
                        <Icon name="fa-solid:home" class="addr-icon home-icon" />
                        <div>
                            <div class="addr-place">
                                <p>Praxisraum</p>
                                <p>in Weiach</p>
                            </div>
                            <p>
                                <a
                                    href="https://goo.gl/maps/SronJErekN9ETXpL9"
                                    target="_blank"
                                >
                                    Im See 3
                                </a>
                            </p>
                            <p>
                                <a
                                    href="https://goo.gl/maps/SronJErekN9ETXpL9"
                                    target="_blank"
                                >
                                    8187 Weiach
                                </a>
                            </p>
                        </div>
                    </div>
                    <div class="icon-text">
                        <Icon name="fa-solid:phone-alt" class="addr-icon" />
                        <a href="tel:+41795648109" target="_blank">
                            +41 (0)79 564 81 09
                        </a>
                    </div>
                    <div class="icon-text icon-text-last">
                        <Icon name="fa-solid:envelope" class="addr-icon" />
                        <a
                            href="mailto:elena_schaller@swissonline.ch"
                            target="_blank"
                        >
                            elena_schaller@swissonline.ch
                        </a>
                    </div>
                </div>
                <iframe
                    loading="lazy"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2692.222292543229!2d8.4247139!3d47.5634632!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x479071c89afe7add%3A0x2d543a607ce5109b!2sIm%20See%203%2C%208187%20Weiach!5e0!3m2!1sen!2sch!4v1679263269765!5m2!1sen!2sch"
                    width="500"
                    height="300"
                    style="border:0;border-radius: 4px;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                >
                </iframe>
            </div>
            <div class="address-map">
                <div class="addr-item2">
                    <div class="icon-text">
                        <Icon name="fa-solid:home" class="addr-icon home-icon" />
                        <div>
                            <div class="addr-place">
                                <p>SALZGROTTE</p>
                                <a href="https://salzgrotte.ch" target="_blank">
                                    salzgrotte.ch
                                </a>
                            </div>
                            <p>
                                <a
                                    href="https://goo.gl/maps/ZfKhNa9Ryq1TmgHh9"
                                    target="_blank"
                                >
                                    Lindenstrasse 23
                                </a>
                            </p>
                            <p>
                                <a
                                    href="https://goo.gl/maps/ZfKhNa9Ryq1TmgHh9"
                                    target="_blank"
                                >
                                    8302 Kloten
                                </a>
                            </p>
                        </div>
                    </div>
                    <div class="icon-text">
                        <Icon name="fa-solid:phone-alt" class="addr-icon" />
                        <a href="tel:+41445505555" target="_blank">
                            +41 (0)44 550 55 55
                        </a>
                    </div>
                    <div class="icon-text icon-text-last">
                        <Icon name="fa-solid:envelope" class="addr-icon" />
                        <a href="mailto:info@salzgrotte.ch" target="_blank"
                            >info@salzgrotte.ch</a
                        >
                    </div>
                </div>
                <iframe 
                    loading="lazy"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2698.0629521094816!2d8.585375799999998!3d47.449712299999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x479a9ff24aa526c7%3A0xcf18b03a3a02f0fc!2sLindenstrasse%2023%2C%208302%20Kloten!5e0!3m2!1sen!2sch!4v1679263639898!5m2!1sen!2sch"
                    width="500"
                    height="300"
                    style="border:0;border-radius: 4px;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
            <div class="contact-form">
                <h2>Kontaktieren Sie mich</h2>
                <form name="contact" method="POST" data-netlify="true">
                    <input type="hidden" name="subject" value="Massage details inquiry" />
                    <p>
                      <p><label>Vorname: </label></p>
                      <input type="text" name="name" />
                    </p>
                    <p>
                        <label>Nachname: </label>
                        <input type="text" name="name" />
                      </p>
                    <p>
                      <label>Email: </label>
                      <input type="email" name="email" />
                    </p>
                    <p>
                      <label>Nachricht: </label>
                      <textarea name="message"></textarea>
                    </p>
                    <div class="contact-button">
                        <ButtonGreySubmit text="SENDEN" />
                        <!-- <button type="submit">Send</button> -->
                    </div>
                  </form>
                  
            </div>
        </div>
        <Footer />
    </main>
</Layout>

<style>
    main {
        margin: 0 auto;
        max-width: 1100px;
        height: 100%;
        background-color: #efd3d7;
    }

    .contacts {
        padding-top: 104px;
    }

    h1,
    h2 {
        color: #8e9aaf;
    }

    .page-title {
        padding: 20px 40px;
        text-align: center;
    }

    .address-map {
        padding: 0 40px 20px 40px;
        max-width: 800px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-flow: wrap;
    }

    .addr-item1 {
        text-align: left;
        padding-left: 20px;
        padding-right: 20px;
    }

    .addr-item2 {
        text-align: left;
        padding-left: 20px;
        padding-right: 20px;
    }

    .addr-place {
        margin-bottom: 8px;
    }

    .icon-text {
        display: flex;
        gap: 10px;
        margin-bottom: 10px;
    }

    .icon-text-last {
        margin-bottom: 0px;
    }

    .addr-icon {
        color: #8e9aaf;
        font-size: 24px;
        width: 20px;
        height: 20px;
        text-align: center;
    }

    .home-icon {
        width: 25px;
        height: 25px;
    }

    .address a {
        color: #3d3d3d;
    }

    .address a:hover {
        color: #84858e;
    }

    /* Contact form */

    .contact-form {
        padding: 20px 40px;
        max-width: 600px;
        margin: 0 auto;
    }

    .contact-form h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .contact-form input, textarea {
        width: 100%;
        margin-bottom: 20px;
        border: none;
        border-radius: 4px;
    }
    .contact-form label {
        width: 100px;
    }
    
    .contact-form input {
        height: 30px;
    }

    .contact-form textarea {
        height: 100px;
    }

    .contact-form p {
        
        justify-content: center;
        gap: 5px;
    }

    .contact-button {
        text-align: right;
    }

    @media (max-width: 960px) {
    }

    @media (max-width: 600px) {
        .contacts {
            padding-top: 70px;
        }
        
        .page-title {
            padding: 20px;
            text-align: center;
        }

        .addr-item1 {
            padding-left: 0px;
            padding-right: 3px;
            padding-bottom: 20px;
        }

        .addr-item2 {
            padding-left: 3px;
            padding-right: 0px;
            padding-bottom: 20px;
        }

        .icon-text {
            gap: 6px;
        }

        .addr-icon {
            width: 15px;
            height: 15px;
        }

        .home-icon {
            width: 18px;
            height: 18px;
        }
    }
</style>
