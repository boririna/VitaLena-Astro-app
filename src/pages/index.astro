<style>
  main {
    height: 100%;
    background-color: #efd3d7;
  }

  /* contacts */

  .contacts {
    padding: 40px 40px;
    text-align: center;
  }

  .contacts,
  .cards,
  .price-section,
  .reviews h1,
  h2,
  h3 {
    color: #8e9aaf;
  }

  .address {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding-top: 20px;
    gap: 8px;
  }

  .all-addr-items {
    display: flex;
  }

  .addr-item1 {
    text-align: left;
    padding-left: 20px;
    padding-right: 20px;
  }

  .addr-item2 {
    text-align: left;
    padding-left: 20px;
    padding-right: 20px;
  }

  .addr-item3 {
    text-align: left;
    padding-left: 20px;
    padding-right: 20px;
  }

  .addr-place {
    margin-bottom: 8px;
  }

  .icon-text {
    display: flex;
    gap: 10px;
    margin-bottom: 10px;
  }

  .icon-text-last {
    margin-bottom: 0px;
  }

  .addr-icon {
    color: #8e9aaf;
    font-size: 24px;
    width: 20px;
    height: 20px;
    text-align: center;
  }

  .home-icon {
    width: 25px;
    height: 25px;
  }

  .address a {
    color: #3d3d3d;
  }

  .address a:hover {
    color: #84858e;
  }

  /* quote */

  .quote-desktop {
    padding: 80px 150px;
    background-color: rgba(255, 255, 255, 0.674);
    text-align: center;
    font-family: "Philosopher", sans-serif;
    font-size: 22px;
    font-weight: 500;
  }

  .quote-mobile {
    display: none;
  }

  /* cards */

  .cards {
    padding: 40px 40px;
    text-align: center;
  }

  .card-row {
    display: flex;
    gap: 16px;
    margin-top: 20px;
  }

  /* prices */

  .price-section {
    padding: 0 40px 20px 40px;
    text-align: center;
    max-width: 1100px;
    margin: 0 auto;
  }

  .price-section h1,
  h2 {
    margin-bottom: 20px;
  }

  .price-columns {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .prices {
    max-width: 450px;
    margin: 0 auto;
    text-align: left;
    margin-bottom: 20px;
  }

  .prices p {
    font-size: 18px;
    margin-bottom: 8px;
  }

  /* reviews */

  .reviews-mobile {
    display: none;
  }

  .reviews-tablet {
    display: none;
  }

  .reviews {
    /* max-width: 800px; */
    padding: 20px 40px 40px 40px;
    margin: 0 auto;
  }

  .reviews h1 {
    margin-bottom: 20px;
    text-align: center;
  }

  .reviews p {
    text-align: center;
    padding-top: 20px;
  }

  .reviews-button {
    text-align: center;
    padding-top: 20px;
  }

  @media (max-width: 900px) {
    .address {
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    .all-addr-items {
      display: flex;
      flex-direction: column;
      width: 300px;
    }

    .addr-item2 {
      padding-top: 20px;
      text-align: left;
    }
    .addr-item3 {
      padding-top: 20px;
      text-align: left;
    }

    .reviews-desktop {
      display: none;
    }

    .reviews-tablet {
      display: block;
    }
  }

  @media (max-width: 600px) {
    /* contacts */

    .contacts {
      font-size: 14px;
      padding: 20px 10px;
    }

    .contacts h1 {
      font-size: 26px;
    }

    .address {
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .all-addr-items {
      display: flex;
      flex-direction: column;
      width: 220px;
    }

    .addr-item1 {
      padding-left: 0px;
      padding-right: 0px;
    }

    .addr-item2 {
      padding-top: 25px;
      padding-left: 0px;
      padding-right: 0px;
    }

    .addr-item3 {
      padding-top: 25px;
      text-align: left;
      padding-left: 3px;
      padding-right: 0px;
    }

    .icon-text {
      gap: 6px;
    }

    .addr-icon {
      width: 15px;
      height: 15px;
    }

    .home-icon {
      width: 18px;
      height: 18px;
    }

    /* quote */
    .quote-desktop {
      display: none;
    }
    .quote-mobile {
      display: block;
      padding: 20px 20px;
      font-size: 18px;
      background-color: rgba(255, 255, 255, 0.674);
      text-align: center;
      font-family: "Philosopher", sans-serif;
      font-weight: 500;
    }

    /* cards */

    .cards {
      padding: 20px 20px;
    }

    .card-row {
      display: block;
      margin-top: 0;
    }

    .cards h1 {
      font-size: 26px;
    }

    /* prices */

    .price-section {
      padding: 0 20px 20px 20px;
      text-align: center;
    }

    .price-columns {
      gap: 0;
    }

    .prices p {
      font-size: 14px;
      font-weight: 600;
      margin-bottom: 8px;
      text-align: left;
    }

    .price-section h1 {
      font-size: 26px;
    }

    .price-section h2 {
      font-size: 22px;
    }

    /* reviews */
    .reviews-desktop {
      display: none;
    }

    .reviews-tablet {
      display: none;
    }

    .reviews-mobile {
      display: block;
    }

    .reviews {
      /* max-width: 800px; */
      padding: 0 20px 20px 20px;
    }

    .reviews h1 {
      font-size: 26px;
    }

    .reviews p {
      padding-bottom: 30px;
    }
  }
</style>
