</Layout>

<style>
    main {
        margin: 0 auto;
        max-width: 1100px;
        height: 100%;
        background-color: #efd3d7;
    }

    .massage {
        padding-top: 104px;
    }

    h1,
    h2 {
        color: #8e9aaf;
    }

    .page-title {
        padding: 20px 40px;
        text-align: center;
    }

    .card-section {
        padding: 0 40px;
    }

    .price-section {
        padding: 0 40px 20px 40px;
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
    }

    .price-section h2 {
        margin: 20px 0;
    }

    .prices {
        max-width: 420px;
        margin: 0 auto;
        text-align: left;
        margin-bottom: 20px;
    }

    .prices p {
        font-size: 18px;
        /* font-weight: 600; */
        margin-bottom: 8px;
    }

    @media (max-width: 600px) {
        .massage {
            padding-top: 70px;
        }

        .page-title {
            padding: 20px;
            text-align: center;
        }

        .card-section {
            padding: 0 20px;
        }

        .price-section {
            padding: 0 20px 20px 20px;
            text-align: left;
        }
        
        .prices p {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 8px;
    }

    }
</style>
